# This is Git's per-user configuration file.
[user]
# Please adapt and uncomment the following lines:
	name = {{ user.full_name }}
	email = {{ user.email }}
[alias]
	lg = log --graph --color --pretty=format:'%C(red)%h%Creset - %an %C(blue)(%ae)%Creset : %s %C(green)(%ar) %C(yellow)%D%Creset'
	co = checkout
[url "https://github.com/"]
	insteadOf = git://github.com/
[core]
	pager = less -F -X
	editor = vim +0
